<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivUserPicture"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:focusable="false"
        android:layout_marginLeft="5dp" />

    <!--<EditText-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        android:id="@+id/tvUsername"
        android:layout_toRightOf="@+id/ivUserPicture"
        android:textColor="#2c72fa"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:layout_alignTop="@+id/ivUserPicture"
        android:layout_alignBottom="@+id/ivUserPicture"
        android:layout_alignBaseline="@+id/ivUserPicture"
        android:textIsSelectable="true"
        android:layout_marginLeft="5dp"
        android:focusable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tvCaptionCreatedTime"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/ivUserPicture"
        android:layout_alignBottom="@+id/ivUserPicture"
        android:layout_alignBaseline="@+id/ivUserPicture"
        android:gravity="center_vertical"
        android:textColor="#f43384ff"
        android:layout_marginRight="10dp"
        android:focusable="false" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ivPhoto"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:minHeight="50dp"
        android:layout_below="@+id/ivUserPicture"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:focusable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tvLikes"
        android:layout_below="@+id/ivPhoto"
        android:textStyle="bold"
        android:textColor="#2c72fa"
        android:layout_marginTop="3dp"
        android:focusable="false"
        android:layout_alignLeft="@+id/tvCaption"
        android:layout_alignStart="@+id/tvCaption" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tvCaption"
        android:id="@+id/tvCaption"
        android:textSize="10dp"
        android:maxLines="3"
        android:ellipsize="end"
        android:maxHeight="100dp"
        style="@style/Animation.AppCompat.Dialog"
        android:gravity="top"
        android:textColor="#133f6a"
        android:paddingBottom="0dp"
        android:textStyle="bold"
        android:focusable="false"
        android:layout_below="@+id/tvLikes"
        android:layout_alignLeft="@+id/ivUserPicture"
        android:layout_alignStart="@+id/ivUserPicture" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="btnViewAllComments"
        android:id="@+id/btnViewAllComments"
        android:textColor="#461a3365"
        android:focusable="false"
        android:textSize="12dp"
        android:minHeight="0dp"
        android:layout_below="@+id/tvCaption"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:clickable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tvComments"
        android:layout_alignParentTop="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="tvComments"
        android:textSize="10dp"
        android:clickable="false"
        android:focusable="false"
        android:layout_below="@+id/btnViewAllComments"
        android:layout_alignLeft="@+id/tvCaption"
        android:layout_alignStart="@+id/tvCaption" />

    <ImageButton
        android:layout_width="10dip"
        android:layout_height="10dip"
        android:src="@drawable/play_button"
        android:id="@+id/btnWatchVideo"
        android:clickable="true"
        android:layout_alignTop="@+id/ivPhoto"
        android:layout_alignBottom="@+id/ivPhoto"
        android:visibility="invisible"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"


        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        android:scaleType="center" />

</RelativeLayout>